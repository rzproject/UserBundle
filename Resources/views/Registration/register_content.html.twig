{% block content %}
<p class="login-box-msg">{{ 'title_user_registration'|trans({}, 'SonataUserBundle') }}</p>
<form action="{{ path('sonata_user_registration_register') }}" {{ form_enctype(form) }} method="POST" role="form" novalidate="novalidate">
	{{ form_widget(form._token) }}
	<div class="form-group has-feedback{% if form.firstname.vars.errors|length %} has-error{% endif %}">
		{{ form_widget(form.firstname) }}<span class="glyphicon glyphicon-user form-control-feedback"></span>
		{{ form_errors(form.firstname) }}
	</div>
	<div class="form-group has-feedback{% if form.lastname.vars.errors|length %} has-error{% endif %}">
		{{ form_widget(form.lastname) }}<span class="glyphicon glyphicon-user form-control-feedback"></span>
		{{ form_errors(form.lastname) }}
	</div>
	<div class="form-group has-feedback{% if form.username.vars.errors|length %} has-error{% endif %}">
		{{ form_widget(form.username) }}<span class="glyphicon glyphicon-user form-control-feedback"></span>
		{{ form_errors(form.username) }}
	</div>
	<div class="form-group has-feedback{% if form.email.vars.errors|length %} has-error{% endif %}">
		{{ form_widget(form.email) }}<span class="glyphicon glyphicon-envelope form-control-feedback"></span>
		{{ form_errors(form.email) }}
	</div>
	<div class="form-group{% if form.dateOfBirth.vars.errors|length %} has-error{% endif %}">
		{{ form_widget(form.dateOfBirth) }}
		{% if form.dateOfBirth.vars.errors|length %}
			<ul class="list-unstyled">
				{% for error in form.dateOfBirth.vars.errors %}
					<li><i class="fa fa-exclamation-circle"></i> {{ error.message| trans({}, form.dateOfBirth.vars.translation_domain) }}</li>
				{% endfor %}
			</ul>
		{% endif %}
	</div>
	<div class="form-group{% if form.gender.vars.errors|length %} has-error{% endif %}">
		{{ form_widget(form.gender) }}
		{% if form.termsAccepted.vars.errors|length %}
			<ul class="list-unstyled">
				{% for error in form.gender.vars.errors %}
					<li><i class="fa fa-exclamation-circle"></i> {{ error.message| trans({}, form.gender.vars.translation_domain) }}</li>
				{% endfor %}
			</ul>
		{% endif %}
	</div>
	<div class="form-group has-feedback{% if form.plainPassword.first.vars.errors|length %} has-error{% endif %}">
		{{ form_widget(form.plainPassword.first) }}<span class="glyphicon glyphicon-lock form-control-feedback"></span>
		{{ form_errors(form.plainPassword.first) }}
	</div>
	<div class="form-group has-feedback{% if form.plainPassword.second.vars.errors|length %} has-error{% endif %}">
		{{ form_widget(form.plainPassword.second) }}<span class="glyphicon glyphicon-lock form-control-feedback"></span>
		{{ form_errors(form.plainPassword.second) }}
	</div>
    <div class="row">
	    <div class="col-xs-8 {% if form.termsAccepted.vars.errors|length %} has-error{% endif %}">
		    {{ form_widget(form.termsAccepted) }}
			{% if form.termsAccepted.vars.errors|length %}
		    <ul class="list-unstyled">
			    {% for error in form.termsAccepted.vars.errors %}
				    <li><i class="fa fa-exclamation-circle"></i> {{ error.message| trans({}, form.termsAccepted.vars.translation_domain) }}</li>
			    {% endfor %}
		    </ul>
			{% endif %}
	    </div>
	    <!-- /.col -->
	    <div class="col-xs-4">
		    <button type="submit" class="btn btn-primary pull-right">{{ 'registration.submit'|trans({}, 'SonataUserBundle') }}</button>
	    </div>
	    <!-- /.col -->
    </div>
    <!-- /.box-body -->
</form>
<a href="{{ path('sonata_user_security_login') }}" class="text-center">{{ 'registration.login'|trans({}, 'SonataUserBundle') }}</a>
{% endblock %}